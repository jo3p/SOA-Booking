{
  "version": 2,
  "output_encoding": "json",
  "name": "QueryServices",
  "port": 8082,
  "endpoints": [
    {
      "endpoint": "/query/",
      "method": "GET",
      "output_encoding": "json",
      "extra_config": {
        "github.com/devopsfaith/krakend/proxy": {
          "sequential": true
        }
      },
      "backend": [
        {
          "url_pattern": "/availability/accomodations/",
          "encoding": "json",
          "method": "GET",
          "host": ["http://availability-service:5000/"]
        },
        {
          "url_pattern": "/price/{start_date}/{end_date}/{resp0_accomodations}/",
          "encoding": "json",
          "method": "GET",
          "host": ["http://pricing-service:5000/"]
        }
      ]
    }
  ]
}