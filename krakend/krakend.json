{
  "version": 2,
  "output_encoding": "json",
  "name": "QueryServices",
  "port": 8082,
  "endpoints": [
    {
      "endpoint": "/query/",
      "querystring_params": ["start_date", "end_date", "city", "country", "n_persons"],
      "method": "GET",
      "output_encoding": "json",
      "extra_config": {
        "github.com/devopsfaith/krakend/proxy": {
          "sequential": true
        }
      },
      "backend": [
        {
          "url_pattern": "/availability/accomodations/",
          "encoding": "json",
          "method": "GET",
          "host": ["http://availability-service:5000/"]
        },
        {
          "url_pattern": "/price/{resp0_accomodations}/",
          "encoding": "json",
          "method": "GET",
          "host": ["http://pricing-service:5000/"]
        }
      ]
    },
    {
      "endpoint": "/bookings/",
      "method": "POST",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/booking/",
          "encoding": "json",
          "method": "POST",
          "host": ["http://booking-service:5000/"]
        }
      ]
    }
  ]
}